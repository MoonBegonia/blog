/* header */
.headband {
  display: none; // 隐藏顶部线条
}

.header {
  margin: 12px auto; // 顶部空白
}

.header-inner {
  border-radius: $myradius; // 圆角

  +mobile() {
    margin: 0 8px;
  }
}

/* sidebar */
.sidebar {
  background: transparent;
}

.sidebar-inner {
  border-radius: $myradius; // 圆角
}

.back-to-top {
  font-size: 14px; // back to top 字体大小
  border-radius: 0 0 $myradius $myradius; // 圆角
}

body {
  background-image: url('https://blog-1253491707.piccd.myqcloud.com/bg.webp/none');
  background-repeat: no-repeat;
  background-attachment: fixed;
  // background-position: center;
  background-size: cover;

  +mobile() {
    background-size: auto auto;
  }
}

/* post */
.post-block {
  border-radius: $myradius; // 圆角
}

#posts>article+article .post-block {
  border-radius: $myradius; // 圆角
}

.comments {
  border-radius: $myradius; // 圆角
}

.pagination {
  border-radius: $myradius; // 圆角
}

.posts-expand .post-body img {
  padding: 0;
  box-shadow: 0 10px 30px 0px rgba(0, 0, 0, 0.4);
}

.post-body .image-caption, .post-body .figure .caption {
  margin: 0 auto;
}

.post-body p a {
  color: $post-link-color;
  border-bottom: none;

  // border-bottom: 1px solid $post-link-color;

  // &:visited {
  // color: $post-link-hover-color;
  // border-bottom: none;
  // // border-bottom: 1px solid $post-link-hover-color;
  // }
  &:hover {
    color: $post-link-hover-color;
    border-bottom: none;
    // border-bottom: 1px solid $post-link-hover-color;
  }
}

/* footer */
.footer {
  color: #fff;
}

code {
  background: pink;
}

.footer a {
  color: $post-link-color;
  border-bottom: 1px solid $post-link-color;

  &:hover {
    color: $post-link-hover-color;
    border-bottom: 1px solid $post-link-hover-color;
  }
}

.tag-cloud a {
  border-bottom: none;

  &:hover {
    border-bottom: none;
  }
}

// 修改选中字符的颜色
::selection {
  background: #00c4b6;
  color: #f7f7f7;
}

::-moz-selection {
  background: #00c4b6;
  color: #f7f7f7;
}